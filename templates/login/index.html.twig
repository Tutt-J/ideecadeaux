{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Connexion | {{ parent() }}{% endblock %}


{% block body %}
<section class="container-fluid security vh-100">
    <div class="content container d-flex  flex-column justify-content-center h-100">
        <div class="row flex-column justify-content-center text-center d-flex  align-items-center">

            <h1 class="display-2">Se connecter</h1>
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('login') }}" method="post" class="col-12 col-md-8">
                <div class="mb-3">
                    <label for="username" class="form-label">Email:</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Mot de passe:</label>
                    <input type="password" id="password" name="_password" class="form-control"/>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn-primary btn mb-3">Connexion</button>

                </div>
                {# If you want to control the URL the user is redirected to on success
                <input type="hidden" name="_target_path" value="/account"/> #}
            </form>
        </div>
    </div>
    <div class="overlay"></div>
</section>

{% endblock %}
